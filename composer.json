{
    "name": "yien/fatcms",
    "description": "FatCMS Based on Yii2 Advanced Project Template",
    "keywords": ["fatcms", "fat", "cms", "yii2"],
    "homepage": "https://fatcms.xyz/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yien/fat-cms/issues/new",
        "source": "https://github.com/yien/fat-cms"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "~2.0.6",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0 || ~2.1.0",
        "yiisoft/yii2-redis": "~2.0.0",
        "yiisoft/yii2-imagine": "^2.1",
        "yiisoft/yii2-authclient": "^2.1",
        "yiisoft/yii2-httpclient": "^2.0",
        "yiisoft/yii2-queue": "^2.1",
        "vlucas/phpdotenv": "^2.5",
        "dmstr/yii2-adminlte-asset": "^2.1",
        "lokielse/omnipay-alipay": "^3.0",
        "lokielse/omnipay-wechatpay": "^3.0",
        "hashids/hashids": "^3.0"


    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",
        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1",


        "kartik-v/yii2-checkbox-x": "*",
        "kartik-v/yii2-date-range": "*",
        "kartik-v/yii2-editable": "*",
        "kartik-v/yii2-export": "*",
        "kartik-v/yii2-field-range": "*",
        "kartik-v/yii2-grid": "*",
        "kartik-v/yii2-krajee-base": "*",
        "kartik-v/yii2-mpdf": "*",
        "kartik-v/yii2-sortable": "*",
        "kartik-v/yii2-widget-fileinput": "*",
        "kartik-v/yii2-widget-select2": "*",
        "kartik-v/yii2-widgets": "*",
        "maxwen/yii2-easy-wechat": "^1.0",
        "mdmsoft/yii2-admin": "^2.0",
        "php-amqplib/php-amqplib": "2.7.*",
        "wbraganca/yii2-dynamicform": "^2.0",
        "sizeg/yii2-jwt": "^1.0",
        "softcommerce/yii2-knob": "^0.1.0",
        "2amigos/yii2-tinymce-widget" : "*",
        "2amigos/yii2-highcharts-widget" : "~1.0",
        "2amigos/yii2-switch-widget" : "~1.0"

    },
    "autoload": {

        "files": [
            "common/helpers.php"
        ]
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
